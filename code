import datetime
import os
import time
import webbrowser

import pyttsx3
import speech_recognition as sr
import wikipedia

# import these first 


chrome_1 = "C:/Program Files (x86)/Google/Chrome/Application/chrome.exe %s"
# using for webbrowser

engine = pyttsx3.init('sapi5')
voices = engine.getProperty('voices')

engine.setProperty('voice', voices[0].id)


def speak(audio):
    engine.say(audio)
    engine.runAndWait()
#for audio 

def wishMe():
    hour = int(datetime.datetime.now().hour)
    if hour >= 4 and hour < 12:
        speak("good morning!")
    elif hour >= 12 and hour < 18:
        speak("good afternoon!")
    else:
        speak("good evening!")
    speak("i am Jarvis ,Mister Param Nainani's personal assistant ")


def takeCommand():
    r = sr.Recognizer()
    with sr.Microphone() as source:
        print("Listening. . .")
        r.phrase_threshold = 0.3
        audio = r.listen(source)

    try:
        print("recognising . . .")
        query = r.recognize_google(audio, language='en-in')
        print(f"User said: {query}\n")
    except Exception as e:
        print(e)
        print("say that again please ...")
        return"None"
    time.sleep(10)
    return query


if __name__ == "__main__":
    wishMe()
    while True:
        # if 1:
